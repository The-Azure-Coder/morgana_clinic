<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/appoint.css">
</head>
<body>
    <div class="appoint-back">
    <div class="appoint-image">
        <h1>Make an Appointment</h1>
    </div>

    <form action="/another/add" method="post" class="appoint-form">
        <input type="hidden" value="appoint" name="app_id">
        <label for="">Patient_id</label>
        <input type="text" name="patient_id">
        
    <label for="">Department</label>
    <select name="department_id" id="">
        <%department.forEach((depart)=>{ %>
            <option value="<%=depart.id%>"><%=depart.department%></option>
        <%})%>
       
    </select>
        <label for="">Procedure</label>
        <select name="procedure_id" id="">
            <%procedure.forEach((pro)=>{ %>
                <option  value="<%=pro.id%>"><%=pro.procedure%></option>
           <% }) %>
           </select>
        <button class="btn" type="submit">book Appointment</button>
    </form>
    </div>
    
</body>
</html>